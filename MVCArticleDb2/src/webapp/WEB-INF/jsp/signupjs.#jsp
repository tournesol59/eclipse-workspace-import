<script type="text/javascript">

    function dovalidations()
    {
    	var username = document.getElementById("empname").value;
    	if (parseInt(empname.length < 4)
    	    {
    		    alert('Username must be at least 4 characters long');
    		    return false;
    		}
    	var password = document.getElementById("password").value;
    	var repassword = document.getElementById("repassword").value;
    	
    	if (parseInt(password.length) < 6)
    	{
    		alert('assword must be at least 6 characters long.');
    		return false;
    	}
    	if (password != repassword)
    	{
    	    alert('Password and re-password are not the same');
    	    return false;
    	}
    }

</script>

